{
    "version": 2,
    "builds": [
        {
            "src": "packages/frontend/package.json",
            "use": "@vercel/static-build",
            "config": { "distDir": "build" }
        },
        {
            "src": "packages/backend/dist/index.js", 
            "use": "@vercel/node"
        }
    ],
    "routes": [
        { "src": "/api/(.*)", "dest": "packages/backend/dist/index.js" },
        { "src": "/(.*)", "dest": "packages/frontend/build/index.html" }
    ]
}
